<div class="col-md-12">
    <h3>@TempData["Message"]</h3>
    @Html.ValidationSummary()
    <div class="card">
        
        <div class="card-block tab-content">
            <!-- Profile tab 1 -->
            <div class="">

                @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "fieldset", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                  
                    <h4 class="m-t-sm m-b">Kullanıcı Oluştur</h4>
                    <div class="form-group row">
                        <div class="col-xs-6">
                            
                            @Html.LabelFor(x=>x.RegisterViewModel.Name)
                            @Html.TextBoxFor(x => x.RegisterViewModel.Name, new { @class = "form-control" })
                        </div>
                        <div class="col-xs-6">
                            @Html.LabelFor(x => x.RegisterViewModel.Surname)
                            @Html.TextBoxFor(x => x.RegisterViewModel.Surname, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-xs-6">
                            @Html.LabelFor(x => x.RegisterViewModel.Email)
                            @Html.TextBoxFor(x => x.RegisterViewModel.Email, new { @class = "form-control", type = "email" })
                        </div>
                        <div class="col-xs-6">
                            @Html.LabelFor(x => x.RegisterViewModel.Username)
                            @Html.TextBoxFor(x => x.RegisterViewModel.Username, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-xs-6">
                            @Html.LabelFor(x => x.RegisterViewModel.Password)
                            @Html.TextBoxFor(x => x.RegisterViewModel.Password, new { @class = "form-control", Type = "password" })
                        </div>
                        <div class="col-xs-6">
                            @Html.LabelFor(x => x.RegisterViewModel.ConfirmPassword)
                            @Html.TextBoxFor(x => x.RegisterViewModel.ConfirmPassword, new { @class = "form-control", Type = "password" })
                        </div>
                        
                    </div>
                    <div class="row narrow-gutter">
                        <div class="col-xs-6">
                            <button type="submit" class="btn btn-app btn-block">Kullanıcı Oluştur</button>
                        </div>
                    </div>
                }
            </div>
            <!-- End profile tab 1 -->
        </div>
        <h3>@TempData["Message"]</h3>
        <div class="card-block">
            <div class="form-group">
                @using (Html.BeginForm("Create", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                   
                    @Html.Label("Roles", new { @class = "col-md-3 control-label" })
                    <div class="col-md-7">
                        @Html.DropDownList("Roles", (List<SelectListItem>)ViewBag.RoleList, new { @class = "js-select2 form-control" })
                    </div>
                    <input type="submit" value="Rol Güncelle" class="btn btn-action" />
                }

            </div>
        </div>
        <!-- .card-block .tab-content -->
    </div>
    <!-- .card -->
</div>


