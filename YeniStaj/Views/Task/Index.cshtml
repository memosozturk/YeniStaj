@model List<YeniStaj.Models.Entities.Task>
    @using YeniStaj.Identity
   @{
   ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <a href="@Url.Action("Create","Task")"><i class="icon_profile"></i> Create Project</a>
        <a href="@Url.Action("Export","Task")">
            <i class="icon_book_alt"></i>Export
        </a>
    </div>
    <div class="card-block">
        <!-- DataTables init on table by adding .js-dataTable-full class, functionality initialized in js/pages/base_tables_datatables.js -->
        <table id="example3" class="table table-bordered table-striped table-vcenter  nowrap display dataTable">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <td>Task Baslik</td>
                    <td>Task Aciklama</td>
                    <td>Proje Adı</td>
                    <td>Task Olusturma Tarihi</td>
                    <td>Task Teslim Tarihi</td>
                    <th class="text-center" style="width: 10%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var data = Model[i];
                <tr class="" :"bg-red")">
                    <td class="text-center">@(i + 1)</td>



                    <td>@data.TaskBaslik</td>
                    <td>@data.TaskAciklama</td>
                    <td>@MembershipTools.GetProjectName(Convert.ToInt32(data.Projeid))</td>
                
                    <td>@data.TaskOlusturmaTarihi</td>
                    <td>@data.TaskTeslimTarihi</td>



                    <td class="text-center">
                        <div class="btn-group">
                            <a href="@Url.Action("Delete","Task", new {id = data.Taskid})" class="btn btn-xs btn-default btnsendcode" name="@data.Taskid" type="button" title="Delete">
                                <i class="icon_close_alt2"></i>
                            </a>

                            <a href="@Url.Action("EditTask","Task", new {id = data.Taskid})" class="btn btn-xs btn-default" title="Edit Project">
                                <i class="ion-edit"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- .card-block -->
</div>

