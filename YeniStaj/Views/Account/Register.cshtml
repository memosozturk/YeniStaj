<body class="login-img3-body">

    <div class="container">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()
        <div class="login-wrap">
            <p class="login-img"><i class="icon_lock-open_alt"></i></p>
            <div class="input-group">

                @Html.LabelFor(x => x.RegisterViewModel.Name, new { @class = "sr-only", name = "Name" })
                <span class="input-group-addon"><i class="icon_profile"></i></span>

                @Html.TextBoxFor(x => x.RegisterViewModel.Name, new { @class = "form-control", placeholder = "Ad" })
            </div>
            <div class="input-group">

                @Html.LabelFor(x => x.RegisterViewModel.Surname, new { @class = "sr-only", name = "SurName" })
                <span class="input-group-addon"><i class="icon_profile"></i></span>

                @Html.TextBoxFor(x => x.RegisterViewModel.Surname, new { @class = "form-control", placeholder = "Soyad" })
            </div>
            <div class="input-group">

                @Html.LabelFor(x => x.RegisterViewModel.Email, new { @class = "sr-only", name = "Eposta" })
                <span class="input-group-addon"><i class="icon_profile"></i></span>

                @Html.TextBoxFor(x => x.RegisterViewModel.Email, new { @class = "form-control", placeholder = "Eposta" })
            </div>
            <div class="input-group">

                @Html.LabelFor(x => x.RegisterViewModel.Username, new { @class = "sr-only", name = "Username" })
                <span class="input-group-addon"><i class="icon_profile"></i></span>

                @Html.TextBoxFor(x => x.RegisterViewModel.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
            </div>
            <div class="input-group">

                @Html.LabelFor(x => x.RegisterViewModel.Password, new { @class = "sr-only" })
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>

                @Html.TextBoxFor(x => x.RegisterViewModel.Password, new { @class = "form-control required", placeholder = "Şifre", Type = "password" })
            </div>
            <div class="input-group">

                @Html.LabelFor(x => x.RegisterViewModel.ConfirmPassword, new { @class = "sr-only" })
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>

                @Html.TextBoxFor(x => x.RegisterViewModel.ConfirmPassword, new { @class = "form-control required", placeholder = "Şifre Tekrar", Type = "password" })
            </div>

            <button class="btn btn-primary btn-lg btn-block" type="submit">Kayıt ol</button>

        </div>
        }

        <div class="text-right">
            <div class="credits">
